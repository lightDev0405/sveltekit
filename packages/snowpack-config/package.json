{
	"name": "@sveltejs/snowpack-config",
	"version": "0.0.5",
	"scripts": {
		"lint": "eslint --ignore-pattern node_modules/ \"**/*.{ts,js,svelte}\" && npm run check-format",
		"format": "prettier --write . --config ../../.prettierrc --ignore-path ../../.prettierignore",
		"check-format": "prettier --check . --config ../../.prettierrc --ignore-path ../../.prettierignore"
	},
	"main": "snowpack.config.js",
	"dependencies": {
		"@snowpack/plugin-svelte": "^3.0.0"
	}
}
